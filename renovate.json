{
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "groupName": "minifiers",
      "extends": ["config:base"],
      "matchPackageNames": [
        "@swc/core",
        "babel-minify",
        "esbuild",
        "google-closure-compiler",
        "terser",
        "uglify-js"
      ],
      "enabled": true
    }
  ]
}

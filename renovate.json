{
	"extends": [
		":dependencyDashboard",
		":semanticPrefixFixDepsChoreOthers",
		":ignoreModulesAndTests",
		"workarounds:all"
	],

	"prHourlyLimit": 24,

	"prConcurrentLimit": 5,

	"gitIgnoredAuthors": ["github-actions@github.com"],

	"packageRules": [
		{
			"packagePatterns": ["*"],
			"enabled": false
		},
		{
			"groupName": "minifiers",
			"matchPackageNames": [
				"@minify-js/node",
				"@swc/core",
				"babel-minify",
				"esbuild",
				"google-closure-compiler",
				"terser",
				"uglify-js"
			],
			"rangeStrategy": "bump",
			"enabled": true
		}
	]
}
